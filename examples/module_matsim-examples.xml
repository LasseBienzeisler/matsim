<?xml version="1.0" encoding="UTF-8"?>
<project name="module_matsim-examples" default="compile.module.matsim-examples">
  <dirname property="module.matsim-examples.basedir" file="${ant.file.module_matsim-examples}"/>
  
  <property name="module.jdk.home.matsim-examples" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.matsim-examples" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.matsim-examples" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.matsim-examples" value="-encoding UTF-8 -source 1.5 -target 1.5 ${compiler.args}"/>
  
  <property name="matsim-examples.output.dir" value="${module.matsim-examples.basedir}/target/classes"/>
  <property name="matsim-examples.testoutput.dir" value="${module.matsim-examples.basedir}/target/test-classes"/>
  
  <path id="matsim-examples.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="matsim-examples.module.production.classpath">
    <path refid="${module.jdk.classpath.matsim-examples}"/>
  </path>
  
  <path id="matsim-examples.runtime.production.module.classpath">
    <pathelement location="${matsim-examples.output.dir}"/>
  </path>
  
  <path id="matsim-examples.module.classpath">
    <path refid="${module.jdk.classpath.matsim-examples}"/>
    <pathelement location="${matsim-examples.output.dir}"/>
  </path>
  
  <path id="matsim-examples.runtime.module.classpath">
    <pathelement location="${matsim-examples.testoutput.dir}"/>
    <pathelement location="${matsim-examples.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.matsim-examples">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.matsim-examples">
    <patternset refid="excluded.from.module.matsim-examples"/>
  </patternset>
  
  <path id="matsim-examples.module.sourcepath">
    <dirset dir="${module.matsim-examples.basedir}">
      <include name="scenarios"/>
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.matsim-examples" depends="compile.module.matsim-examples.production,compile.module.matsim-examples.tests" description="Compile module matsim-examples"/>
  
  <target name="compile.module.matsim-examples.production" depends="register.custom.compilers" description="Compile module matsim-examples; production classes">
    <mkdir dir="${matsim-examples.output.dir}"/>
    <javac2 destdir="${matsim-examples.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.matsim-examples}/javac">
      <compilerarg line="${compiler.args.matsim-examples}"/>
      <bootclasspath refid="matsim-examples.module.bootclasspath"/>
      <classpath refid="matsim-examples.module.production.classpath"/>
      <src refid="matsim-examples.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.matsim-examples"/>
    </javac2>
    
    <copy todir="${matsim-examples.output.dir}">
      <fileset dir="${module.matsim-examples.basedir}/scenarios">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.matsim-examples.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.matsim-examples.tests" depends="register.custom.compilers,compile.module.matsim-examples.production" description="compile module matsim-examples; test classes" unless="skip.tests"/>
  
  <target name="clean.module.matsim-examples" description="cleanup module">
    <delete dir="${matsim-examples.output.dir}"/>
    <delete dir="${matsim-examples.testoutput.dir}"/>
  </target>
</project>